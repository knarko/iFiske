{{> header}}
<div id="menu">
  {{{button text="Hitta Fiskevatten" id="find_fish" ontouchend="Search.go()"}}}
  {{#if user}}
  <div id="logged-in">
    {{{button text="Mina Fiskekort" id="my_cards" ontouchend="License.fetch('my_cards')"}}}
    {{{button id="register_catch" target="register_catch" text="Registrera Fångst"}}}
  </div>
  {{else}}
  <div class="not-logged-in">
    {{{button id="login" target="login" text="Logga in"}}}
    {{{button id="register" target="register_user" text="Registrera"}}}
  </div>
  {{/if}}
</div>

<div id="bottom">
  <div id="links">
    <a onclick="try_open_fb();"">
      <button class="img" id="facebook" />
    </a>
    <button class="img" id="settings" ontouchend="Navigate.to('settings');"/>
  </div>

  <div id="footer">
      {{#if user}}
          Inloggad som {{user}}
      {{else}}
          Ingen användare inloggad
      {{/if}}

  </div>
</div>
